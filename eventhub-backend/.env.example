# EventHub Backend - Variabili d'ambiente

# Porta server
PORT=3000

# Ambiente: development | production
NODE_ENV=development

# Segreto per JWT (cambialo in produzione)
JWT_SECRET=supersecret-dev-key

# Configurazione Database PostgreSQL
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=eventhub

# Abilita SSL solo se necessario (true/false)
DB_SSL=false

# Frontend URL (usato per redirect OAuth e verifica email)
FRONTEND_URL=http://localhost:5173

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# SMTP per invio email di conferma
APP_BASE_URL=http://localhost:3000
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=no-reply@eventhub.local